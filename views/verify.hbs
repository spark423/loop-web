<link rel="stylesheet" href="/css/login.v5.min.css" />
<script>
function resend() {
  var xhttp = new XMLHttpRequest();
  xhttp.open("POST", "/verify-email", true);
  xhttp.send();
}
</script>
<section id="login">
    <div class="login-header">
        <img class="uk-float-left" src="/img/loop_logo_white.png" alt="Loop" />
        <ul class="uk-list uk-link-text">
            <li><a href="#">Help</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">About</a></li>
        </ul>
    </div>

    <h1>Account Created!</h1>
    <p>Please verify your email by clicking on the link sent to: {{user.username}}</p>

    <div class="inputs">
            <a type="button" class="uk-button uk-button-default" onclick="resend()">
                Resend
            </a>
    </div>

</div><br><br><br>
