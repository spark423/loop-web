<link rel="stylesheet" href="/css/boards-following/sxn-boards-following.min.css" />
<div id="boards-following">

    <h4>Followed Tags {{#if self}}<a id="pencil" href="/add-tags"><span class="uk-icon" uk-icon="icon: pencil"></a>{{/if}}</h4>

    <div class="uk-card uk-card-default uk-card-body">

        <div uk-grid>
          {{#if user.tags}}
          {{#each user.tags}}
            <div class="uk-width-1-4@m" style="margin-top: 0px">
                <p>
                    <a href="/tag/{{_id}}" style="color: black"><b>{{name}}</b></a>
                </p>
            </div>
          {{/each}}
          {{else}}
          <div class="uk-width-1-4@m" style="margin-top: 0px">
              <p>
                  No tags
              </p>
          </div>
          {{/if}}

        </div>

    </div>

</div>
