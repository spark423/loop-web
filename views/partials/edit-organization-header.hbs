<link rel="stylesheet" href="/css/edit-organization-header/sxn-edit-organization-header.min.css" />

<div id="edit-organization-header">
  <form id="deactivate" method="post" action="/groups/{{id}}/deactivate"></form>
  <form id="reactivate" method="post" action="/groups/{{id}}/reactivate"></form>

<form id="orgform" method="post" action="/groups/{{id}}/edit">
    <div class="edit-organization-header top">
        <h2><a href="javascript:history.back();"><span uk-icon="icon: chevron-left"></span></a>Edit Organization</h2>
        <a onclick="document.getElementById('orgform').submit();" class="uk-float-right green"><span class="uk-icon" uk-icon="icon: check"></span>Save Changes</a>
<br>       <br> {{#if active}}<a onclick="document.getElementById('deactivate').submit();" class="uk-float-right" style="color: red"><span class="uk-icon" uk-icon="icon: close" style="color:red"></span>Deactivate</a>
        {{else}}<a onclick="document.getElementById('reactivate').submit();" class="uk-float-right"><span class="uk-icon" uk-icon="icon: plus"></span>Reactivate</a>
        {{/if}}
    </div>

</div>
