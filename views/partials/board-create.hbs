<link rel="stylesheet" href="css/board-create/sxn-board-create.min.css" />

<div id="board-create">

    <div class="uk-card uk-card-default uk-card-body">

        <div class="create-wrap">
            <h4 class="inner">New Board</h4>
            <div class="divider"></div>
            <div class="create-grid" uk-grid>
                <div class="poll-wrap uk-width-3-5@m">
                    <div class="form-wrap">
                        <form action="/boards/create" method="post" id="boardform">
                            <input class="uk-input uk-form-large uk-form-blank uk-form-width-large" type="text" name="name" placeholder="Add a name"></input>
                            <textarea class="uk-textarea uk-form-blank uk-form-width-large" type="text" name="description" placeholder="Add a description" style="overflow: hidden; resize: vertical"></textarea>
                        <a class="uk-button uk-button-primary" type="button" onclick="document.getElementById('boardform').submit();">Create</a>
                        <a class="uk-button uk-button-cancel" type="button" href="javascript:history.back()">Back</a>
                    </div>
                </div>
                <div class="uk-width-2-5@m">
                    <div class="list-wrap">
                        <ul>
                            <li>
                                <a class="uk-float-left">
                                    <span>Board Visibility: &nbsp</span>
                                </a>
                                <select name="private">
                                  <option value="false">All</option>
                                  <option value="true">None</option>
                                </select>
                            </li>
                            <li>
                                <a class="uk-float-left">
                                    <span>Posting Rights: &nbsp</span>
                                </a>
                                <select name="create">
                                  <option value="true">All</option>
                                  <option value="false">Only Admins</option>
                                </select>
                            </li>
                            <li>
                                <a class="uk-float-left">
                                    <span>Students may unsubscribe: &nbsp</span>
                                </a>
                                <select name="unsubscribable">
                                  <option value="true">Yes</option>
                                  <option value="false">No</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
      </form>
    </div>
</div>
