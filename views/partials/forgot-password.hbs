<script>
function changePassword() {
  var xhttp = new XMLHttpRequest();
  xhttp.open("POST", "/reset", true);
  var token = document.getElementById('token').value;
  var password = document.getElementById('password').value;
  var confirmPassword = document.getElementById('confirmPassword').value;
  xhttp.setRequestHeader('Content-Type', 'application/json');
  xhttp.send(JSON.stringify({token: token, newPassword: password, confirmNewPassword: confirmPassword}));
}
</script>
<section id="login">
    <div class="login-header">
        <img class="uk-float-left" src="img/loop_logo_white.png" alt="Loop" />
        <ul class="uk-list uk-link-text">
            <li><a href="#">Help</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">About</a></li>
        </ul>
    </div>

    <h1>Reset Password</h1>
    <p>To finish resetting your password, fill out the form below:</p>

    <div class="inputs">
        <form>
            <div class="uk-margin">
                <input class="uk-input uk-form-width-medium" type="text" placeholder="Token" id="token">
            </div>
            <div class="uk-margin">
                <input class="uk-input uk-form-width-medium" type="password" placeholder="New password" id="password">
            </div>
            <div class="uk-margin">
                <input class="uk-input uk-form-width-medium" type="password" placeholder="Confirm new password" id="confirmPassword">
            </div>
            <a href="#password-reset" onclick="changePassword()" class="uk-button uk-button-default" uk-toggle>
                Reset
            </a>
            <a href="/" class="uk-button uk-button-secondary">
                Cancel
            </a>
        </form>
    </div>

</div>
{{>password-modal}}
