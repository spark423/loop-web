<link rel="stylesheet" href="/css/event-detail-header/sxn-event-detail-header.min.css" />

<div id="event-detail-header">

    <div class="event-detail-header top">
        <h2><a href="javascript:history.back()"><span uk-icon="icon: chevron-left"></span></a>{{event.title}}</h2>
        <a href="" class="uk-float-right green"><span class="uk-icon" uk-icon="icon: pencil"></span>Edit event</a>
        <div class="img-wrap"></div>
    </div>

    <div class="event-detail-header" class="uk-child-width-1-2@m" uk-grid>
        <div>
            <p class="created-by">Created by <a href="/users/{{event.postedBy.id}}" style="color: gray">{{event.postedBy.firstName}} {{event.postedBy.lastName}}</a><span>at {{event.createdAt}} in <a href="/boards/{{event.board}}">{{board}}</a></span></p>
            <span>{{event.date}}, {{event.startTime}} to {{event.endTime}}</span>
        </div>
        <div>

            <div class="uk-clearfix"></div>
            <div class="attending uk-float-right">
                <span uk-icon="icon: users"></span><span>{{event.attendees.length}} attending</span>
            </div>
            <div class="uk-clearfix"></div>
        </div>
    </div>

</div>
