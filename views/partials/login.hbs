<style>
.alert {display:inline-block;}
</style>
<section id="login">
    <div class="login-header">
        <img class="uk-float-left" src="img/loop_logo_white.png" alt="Loop" />
        <ul class="uk-list uk-link-text">
            <li><a href="#">Help</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">About</a></li>
        </ul>
    </div>
{{#if message}}
<script> alert("{{message}}"); </script>
{{/if}}
    <h1>Welcome to Loop</h1>
    <p>Please login to your account to continue</p>

    <div class="inputs">
        <form action="/login" method="post" id="loginform">
            <div class="uk-margin">
                <input required class="uk-input uk-form-width-medium" type="text" name="username" placeholder="username" onkeydown = "if (event.keyCode == 13)document.getElementById('submit_button').click()">
            </div>
            <div class="uk-margin">
                <input required class="uk-input uk-form-width-medium" type="password" name="password" placeholder="password" onkeydown = "if (event.keyCode == 13)document.getElementById('submit_button').click()">
            </div>

        <a class="uk-button uk-button-default new-margin" id="submit_button" onclick="document.getElementById('loginform').submit();">
            Login
        </a>
        </form>
        <div class="uk-clearfix"></div>
    </div>

    <a class="underlined" href="/reset">Forgot password?</a>
<br><br><br><br>
    <div>
        <span>First time?</span><br />
        <span><a class="underlined" href="/signup">Register now</a> with your school or university.</span>
    </div>
<br>
</div>
