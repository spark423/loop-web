<div uk-drop="mode: click">
    <div class="uk-card uk-card-body uk-card-default">
        <ul>
          {{#compare this.attending false operator="=="}}
            <li>
              <a href="#" onclick="document.getElementById('attend-event-{{@index}}').submit();">
                Attend Event
              </a>
            </li>
            {{else}}
            <li>
              <a href="#" onclick="document.getElementById('unattend-event-{{@index}}').submit();">
                Unattend Event
              </a>
            </li>
            {{/compare}}
            {{#if @root.admin}}
            <li>
              <a href="/event/{{id}}/edit">
                Edit Event
              </a>
            </li>
            {{else if this.own}}
            <li>
              <a href="/event/{{id}}/edit">
                Edit Event
              </a>
            </li>
            {{/if}}
            {{#if @root.admin}}
            {{#if this.flagged}}
            <form method="post" id="unflag-event-{{@index}}" action="/events/{{this.id}}/unflag"></form>
            <li>
              <a href="#" onclick="document.getElementById('unflag-event-{{@index}}').submit();">
                Unflag Event
              </a>
            </li>
            <form method="post" id="delete-flagged-event-{{@index}}" action="/events/{{this.id}}/delete"></form>
            <li>
              <a href="#" onclick="document.getElementById('delete-flagged-event-{{@index}}').submit();">
                Delete Event
              </a>
            </li>
            {{else}}
            <li>
              <a href="#" onclick="document.getElementById('delete-event-{{@index}}').submit();">
                Delete Event
              </a>
            </li>
            {{/if}}
            {{else if this.own}}
            <li>
              <a href="#" onclick="document.getElementById('delete-event-{{@index}}').submit();">
                Delete Event
              </a>
            </li>
            {{else}}
            <li>
              <a href="#" onclick="document.getElementById('flag-event-{{@index}}').submit();">
                Flag Event
              </a>
            </li>
            {{/if}}
        </ul>
    </div>
</div>
