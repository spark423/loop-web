<style>
.alert {display:inline-block;}
</style>
<section id="login">
    <div class="login-header">
        <img class="uk-float-left" src="img/loop_logo_white.png" alt="Loop" />
        <ul class="uk-list uk-link-text">
            <li><a href="#">Help</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">About</a></li>
        </ul>
    </div>

    <h1>Hi, {{firstName}}</h1>
    <p>Now that we've verified your info, please create a password.</p>
    {{#if message}}
      <script> alert("{{message}}"); </script>
    {{/if}}
    <div class="inputs">
        <form action="/signup-password" method="post" id="register">
            <div class="uk-margin">
                <input class="uk-input uk-form-width-medium" type="password" name="password" placeholder="password">
            </div>
            <div class="uk-margin">
                <input class="uk-input uk-form-width-medium" type="password" name="confirmPassword" placeholder="retype password">
            </div>
            <a class="uk-button uk-button-default" onclick="document.getElementById('register').submit();">
                Create Account
            </a>
            <a href="/signup" class="uk-button uk-button-secondary">
                Back
            </a>
        </form>
    </div>

    <div class="uk-position-bottom-center">
        <span><a class="underlined" href="#">Help me</a> register my account.</span>
    </div>

</div>
